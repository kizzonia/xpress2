			<div class="col-lg-12 col-md-12 col-sm-12">


        <div class="ed_transprentbg ">
        	<div class="container">
        		<div class="row">
        			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        				<div class="ed_counter_wrapper">
                  <% @orders.each do |o| %>
                  <div class="col-lg-8 col-md-8">
                    <div class="ed_chart_ratio style_2">
                      <i class="fa fa-ship" aria-hidden="true"></i>

                      <h4>Tracking Number: <%= link_to o.tracking_number, o %></h4>
                      <div class="well">
                        <p>Address: <%= o.address %></p>
                        <p>City: <%= o.city %></p>
                        <p>State: <%= o.state %>, <%= o.country %></p>
                      </div>
                      <p class="float-right"><% if o.status? %>
                        <%= link_to "View status", o, class: "btn btn ed_btn ed_orange" %>
                        <%else %>
                        <a href="#" class="btn btn-danger">Awaiting Pickup</a>
                        <% end %>
                      </p>


                                        </div>
                  </div>
