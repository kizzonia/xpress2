
<%= simple_form_for(@deposit) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :payment_type, as: :select, :collection => [ "Bitcoin", "Ethereum", "Moneygram/Western Union", "Bitcoin Cash", "Ria"] %>
    <%= f.input :amount, placeholder: "$5000" %>
    <%= f.input :email, placeholder: "Please Provide Your Registered Email" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
